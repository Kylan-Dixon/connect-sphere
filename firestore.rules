
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own connections.
    // The 'userId' field in the document must match the user's UID.
    match /connections/{connectionId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
